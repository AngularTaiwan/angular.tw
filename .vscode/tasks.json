{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "rebuild",
            "type": "shell",
			"command": "./build.sh",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": {},
            "options": {
                "shell": {
                    "executable": "ubuntu1804.exe",
                    "args": [
                        "run"
                    ]
                }
            },
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
